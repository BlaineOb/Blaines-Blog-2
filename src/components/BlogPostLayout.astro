---
import Layout from "../layouts/Layout.astro";
import "../styles/blog-post.css";
---

<Layout>
    <div id="articleContainer">
        <article>
            <slot />
        </article>
    </div>
</Layout>

<style>
    #articleContainer {
        display: flex;
        justify-content: center;
        padding-bottom: 50px;
        @media (max-width: 1100px) {
            margin: 0 5%;
        }
    }

    article {
        max-width: 1100px;
    }
</style>
